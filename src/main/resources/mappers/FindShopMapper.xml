<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="flab.delideli.dao.FindShopDao" >

    <select id="findAllShop" resultMap="findAllShops" parameterType="list">
        SELECT *
        FROM shops
    </select>

    <resultMap id="findAllShops" type="flab.delideli.dto.ShopDTO">
        <result column="shop_name" property="shopName"></result>
        <result column="shop_tel" property="shopTel"></result>
        <result column="shop_location" property="shopLocation"></result>
        <result column="shop_info" property="shopInfo"></result>
        <result column="delivery_area" property="deliveryArea"></result>
        <result column="food_category" property="foodCategory"></result>
        <result column="notice" property="notice"></result>
        <result column="operating_time" property="operatingTime"></result>
        <result column="business_num" property="businessNum"></result>
        <result column="owner_id" property="ownerId"></result>
    </resultMap>
</mapper>